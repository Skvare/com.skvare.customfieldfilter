<?xml version="1.0"?>
<extension key="com.skvare.customfieldfilter" type="module">
  <file>customfieldfilter</file>
  <name>Custom Field Filter</name>
  <description>Adds filtering functionality to multi-value custom groups tabs displayed on the contact summary page.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Sunil Pawar</author>
    <email>sunil@skvare.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/Skvare/com.skvare.customfieldfilter</url>
    <url desc="Documentation">https://github.com/Skvare/com.skvare.customfieldfilter</url>
    <url desc="Support">https://github.com/Skvare/com.skvare.customfieldfilter</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-07-11</releaseDate>
  <version>1.0</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>5.81</ver>
  </compatibility>
  <comments>Provides filtering functionality for multi-value custom groups displayed in contact summary page as tab.</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Customfieldfilter</namespace>
    <format>23.02.1</format>
    <angularModule>crmCustomfieldfilter</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>menu-xml@1.0.0</mixin>
  </mixins>
</extension>
